<h1>All <%= @brand_name %> Products</h1>

<div class="row">
    <% @products_by_brand.each do |product| %>
    <div class="col-md-4">
        <div class="well center-it" style="height:150px;">
        <p>
        <% if product.image_file_name != nil %>
        <%= image_tag product.image.url(:thumb), class: "img-responsive" %>
        <% end %>
        </p>
        <p><%= link_to product.name, product %></p>
        <p><%= number_to_currency product.price %></p>
        <div style="height:150px;">
            <p><%= product.description%></p>
        </div>
        <p>
            <a href="#"><span class="glyphicon glyphicon-plus">Quick Info</span></a>    
        </p>
        </div>
        <p>Produced By: <%= product.brand%></p>
    </div>
    <% end %>
</div>
